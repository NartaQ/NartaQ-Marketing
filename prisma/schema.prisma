generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  binaryTargets   = ["native", "rhel-openssl-3.0.x", "linux-musl", "debian-openssl-3.0.x"]
  engineType      = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FounderApplication {
  id           String   @id @default(cuid())
  fullName     String
  workEmail    String
  companyName  String
  website      String
  sector       String[] // Array of sectors
  otherSector  String? // For when "Other" is selected
  fundingStage String
  location     String
  shortPitch   String
  pitchDeckUrl String? // URL to the uploaded pitch deck
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("founder_applications")
}

model InvestorApplication {
  id               String   @id @default(cuid())
  fullName         String
  workEmail        String
  companyName      String
  title            String
  investmentFocus  String[] // Array of investment focus areas
  otherFocus       String? // For when "Other" is selected
  ticketSize       String
  targetGeography  String[] // Array of target geographies
  referralSource   String
  otherSource      String? // For when "Other" is selected
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("investor_applications")
}
